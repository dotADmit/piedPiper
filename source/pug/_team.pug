			+team-item('source/img/team-3.png', 'Photo of Bertram Gilfoyle', 'Bertram Gilfoyle', 'Chief Systems Architect')
			+team-item('source/img/team-4.png', 'Photo of Jared Dunn', 'Jared Dunn', 'Chief Operating Officer')
			+team-item('source/img/team-5.png', 'Photo of Monica Hall', 'Monica Hall', 'Chief Financial Officer')
