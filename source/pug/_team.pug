mixin team-item(href, alt, name, position)
	.team__item
		img.team__item-img(src=href alt=alt)
		.team__item-name= name
		.team__item-position= position

section.team
	.wrapper
		.title The team
		.team__items
			+team-item('source/img/team-1.png', 'Photo of Richard Hendricks', 'Richard Hendricks', 'Founder & CEO')
